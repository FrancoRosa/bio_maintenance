<p id="notice"><%= notice %></p>

<h1 class="title mt-4">Maintenances</h1>

<table class="table">
  <thead>
    <tr>
      <th>Device</th>
      <th>Maintainer</th>
      <th>State before</th>
      <th>State after</th>
      <th>Maintenance type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @maintenances.each do |maintenance| %>
      <tr>
        <td><%= maintenance.device_id %></td>
        <td><%= maintenance.maintainer_id %></td>
        <td><%= maintenance.state_before %></td>
        <td><%= maintenance.state_after %></td>
        <td><%= maintenance.maintenance_type %></td>
        <td><%= link_to 'Show', maintenance %></td>
        <td><%= link_to 'Edit', edit_maintenance_path(maintenance) %></td>
        <td><%= link_to 'Destroy', maintenance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

