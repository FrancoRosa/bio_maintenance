<%= form_with(model: area, local: true) do |form| %>
  <% if area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
        <% area.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'input'  %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'input'  %>
  </div>

  <div class="field">
    <%= form.label :contact_name %>
    <%= form.text_field :contact_name, class: 'input'  %>
  </div>

  <div class="field">
    <%= form.label :contact_phone %>
    <%= form.text_field :contact_phone, class: 'input'  %>
  </div>

  <div class="field">
    <%= form.label :facility_id %>
    <div class="control">  
      <div class="select">
        <%= form.collection_select :facility_id, @facilities.order(:name), :id, :name %>
      </div>
    </div>
  </div>


  <div class="actions">
    <%= form.submit class: "button mb-4 is-success" %>
  </div>
<% end %>
